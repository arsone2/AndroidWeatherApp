<resources>

    <!-- https://developer.android.com/reference/android/R.styleable.html -->

    <!-- Base application theme. -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="LightTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/basicText</item>
        <!-- <item name="android:windowBackground">@color/windowBackground</item>-->

        <!--      <item name="android:alertDialogTheme">@style/AlertDialog.AppCompat.Light</item>-->
    </style>

    <style name="mainTitle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/mainTitleColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="updateText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleDesc">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textStyle">bold</item>
    </style>

