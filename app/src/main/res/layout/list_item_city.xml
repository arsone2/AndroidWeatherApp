<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

    <TextView
        android:id="@+id/enteredCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="entered"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        style="@style/titleText"
        />

<!--    <TextView
        android:id="@+id/returnedNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="returned"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/enteredCityTextView"
        android:layout_toEndOf="@+id/enteredCityTextView"
        style="@style/titleText"
        />-->

        <TextView
            android:id="@+id/dayTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="day"
            style="@style/titleText"
            />

        <TextView
            android:id="@+id/tempUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="2dp"
            />

        <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkboxForDelete"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:visibility="visible"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:button="@drawable/checkbox_selector"
        />

<!--        android:focusable="false"
        android:focusableInTouchMode="false"-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/conditionImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="description"
            style="@style/titleDesc"
            />

<!--        <TextView
            android:id="@+id/dayTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="day"
            style="@style/titleText"
            />

        <TextView
            android:id="@+id/tempUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="C"
            />-->

        </LinearLayout>

    </LinearLayout>



