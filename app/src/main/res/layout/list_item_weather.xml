<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginRight="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/dayOfWeekTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day Of Week"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:gravity="right"
            android:text="date"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/conditionImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="description"
            style="@style/titleDesc"
            />

        <TextView
            android:id="@+id/dayTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="day"
            style="@style/titleText"
            />

        <TextView
            android:id="@+id/tempUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="C"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/minMaxTempTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мин./макс. темп.: 20/45 С"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/morningTempTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="morning"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/eveningTempTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="evening"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/nightTempTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="night"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="humidity"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/pressureTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pressure"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/windSpeedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="windSpeed"
        android:layout_marginBottom="5dp"
        />


    <TextView
        android:id="@+id/windDirectionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="direction"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>


